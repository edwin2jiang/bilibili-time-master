{
  "manifest_version": 3,
  "name": "B站时间管理大师",
  "description": "帮助您更加健康的使用B站, 拒绝沉迷, 良性使用",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
      "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": [ "content.css" ],
      "matches": [
        "https://www.bilibili.com/*"
      ]
    }
  ],
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      }
    }
  }
}